---
import Footer from '../components/Footer'
import Meta from '../components/head/Meta.astro'
import Header from '../components/header/Header.astro'
import '../styles/base.css'
import ColorMode from './ColorMode.astro'
import GoogleFont from './GoogleFont.astro'

export interface Props {
  title: string
  author?: string
  description?: string
  withoutFooter?: boolean
}

const {
  title = 'zacharytamas',
  author = 'Zachary Jones',
  description = 'My personal website.',
  withoutFooter = false,
} = Astro.props

const noVariant = Astro.props.variant === undefined
---

<!DOCTYPE html>
<html lang="en" class="theme">
  <head>
    <meta charset="UTF-8" />
    <Meta description={description} author={author} />
    <title>{`${title} | zacharytamas`}</title>
    <GoogleFont />
    <ColorMode />
  </head>
  <body>
    <Header />
    <slot />
    {!withoutFooter ? <Footer /> : null}
  </body>
</html>
